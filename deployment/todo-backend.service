[Unit]
Description=FastAPI Backend for To-Do App
After=network.target

[Service]
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/todo-app/backend
# Assuming the virtual environment is created at /home/ubuntu/todo-app/backend/venv
ExecStart=/home/ubuntu/todo-app/backend/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always

[Install]
WantedBy=multi-user.target
